<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.arthur.javafx.OrderAddController">
    <Label text="Número do Pedido:" />
    <TextField fx:id="numeroPedidoField" />
    <Label text="Conteúdo do Pedido:" />
    <TextArea fx:id="conteudoPedidoArea" />
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Adicionar" onAction="#adicionarPedido"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>